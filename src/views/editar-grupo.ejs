<main class="contenedor contenedor-formularios no-padding">
  <h1><%= nombrePagina %> </h1>
  <form class="default-form" method="POST" >
    <div class="campo">
      <label>Nombre</label>
      <input type="text" value="<%= grupo.nombre %>" name="nombre" placeholder="Tu nombre">
    </div>
    <div class="campo">
      <label>Descripción</label>
      <div class="contenedor-editor">
        <input type="hidden" id="x" value="<%= grupo.descripcion %>" name="descripcion">
        <trix-editor input="x"></trix-editor>
      </div>
    </div>
    <div class="campo">
      <label for="">Categoría</label>
      <select name="categoriaId" id="">
        <option value="" selected disabled>-- Elige una categoría --</option>
        <% categorias.forEach(categoria => { %>
          <option 
            value="<%= categoria.id %>"
            <%= (grupo.categoriaId === categoria.id) ? 'selected' : '' %> 
          >
          <%= categoria.nombre %> </option>
        <% }) %> 
      </select>
    </div>
    <div class="campo">
      <label for="">Sitio Web</label>
      <input type="url" name="url" value="<%= grupo.url %>"  placeholder="Sitio Web">
    </div>
    <div class="campo enviar">
      <input type="submit" value="Guardar Cambios" class="btn btn-rosa">
    </div>
  </form>
</main>